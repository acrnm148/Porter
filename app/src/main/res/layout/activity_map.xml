<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.example.porter.MapActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="291dp"
        android:background="@drawable/round_border"
        android:orientation="horizontal"
        android:paddingTop="52dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_setLocStart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:text="현위치를 출발지로"
                    android:textColor="@drawable/text_click"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_moveLoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="right"
                    android:text="현위치 보기"
                    android:textColor="@drawable/text_click"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/edit_start"
                        android:layout_width="320dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_border_text"
                        android:ems="10"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="출발지를 입력하세요"
                        android:inputType="textPersonName"
                        android:paddingLeft="10dp"
                        android:selectAllOnFocus="true" />

                    <ImageView
                        android:id="@+id/cancel_st"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/cancel" />

                </FrameLayout>


                <Button
                    android:id="@+id/btn_start"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:text="검색"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:backgroundTint="#5559b4" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/edit_end"
                        android:layout_width="320dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_border_text"
                        android:ems="10"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="도착지를 입력하세요"
                        android:inputType="textPersonName"
                        android:paddingLeft="10dp"
                        android:selectAllOnFocus="true" />

                    <ImageView
                        android:id="@+id/cancel_fin"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/cancel" />

                </FrameLayout>

                <Button
                    android:id="@+id/btn_end"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="검색"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:backgroundTint="#5559b4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dip"
                        android:orientation="vertical">

                        <RadioGroup
                            android:id="@+id/radioGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/btn0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="교통최적+추천(기본값)" />

                            <RadioButton
                                android:id="@+id/btn1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="교통최적+무료우선" />

                            <RadioButton
                                android:id="@+id/btn2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="교통최적+최소시간" />

                            <RadioButton
                                android:id="@+id/btn3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="교통최적+초보" />

                            <RadioButton
                                android:id="@+id/btn4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="교통최적+고속도로우선" />

                            <RadioButton
                                android:id="@+id/btn10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="최단거리+유/무료" />

                            <RadioButton
                                android:id="@+id/btn12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="이륜차도로우선 (일반도로가 없는 경우 자동차 전용도로로 안내 할 수 있습니다.)" />

                            <RadioButton
                                android:id="@+id/btn19"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="교통최적+어린이보호구역 회피" />
                        </RadioGroup>
                    </ScrollView>

                    <Button
                        android:id="@+id/btn_draw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:clickable="true"
                        android:text="길찾기"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:backgroundTint="#5559b4" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/tmap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="292dp"
                android:layout_gravity="left|top"
                android:background="#FFFFFFFF" />

        </LinearLayout>

    </FrameLayout>

</android.widget.LinearLayout>